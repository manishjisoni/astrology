<div class="container">
  <p id="notice"><%= notice %></p>
<% @services.each do |service| %>
  <div class="row">

    <div class="col-md-4">
      <h3><%= link_to service.name, service_path(service)%></h3>
        <%= link_to service_path(service) do %>
          <%= image_tag service.avatar.url(:thumb) %>
        <% end %>
    </div>

    <div class="col-md-8">
        <h3>Description</h3>
        <p><%= truncate("#{service.message}", :length => 250, :omission => '... (continued)') %></p>
    </div>

  </div><br>
<%end%>
  
</div>